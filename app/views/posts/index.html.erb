<% provide(:home, "active") %>
<% @page_title = "Grubyblog | Home" %>

<% @posts.each do |post| %>
<div class="col-lg-5  article">
  <table class="infos">
    <tr>	
	    <td><%= image_tag "cat.png", :class => "ico" %></td> 
	    <td><%= link_to post.category.name, category_path(post.category) %></td>
	    <td>/</td>
	    <td><%= image_tag "cal.png", :class => "ico" %></td> 
	    <td><%= post.created_at.strftime("%d.%m.%Y") %></td>
	  </tr>
  </table>
  <div class="cover">
    <%= image_tag("/uploads/photo/image/#{post.id}/cover.png") %>
  </div>
  <h2><%= post.title %></h2>
  <hr>  
  <div class="text-description"><%= raw post.description %></div> 
  <p><%= link_to "Czytaj dalej &rarr;".html_safe, post, :class => "btn btn-default", :role => "button" %></p>
  <table class="infos">
	  <tr>	
	    <td><%= image_tag "tag.png", :class => "ico" %></td> 
	    <td><%= post.tag %></td>
	  </tr>
  </table>
</div>
<% end %>

<%= paginate @posts %>
